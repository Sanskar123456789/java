package simplilearn.phase1.proj;

import java.util.Scanner;

public class project {
	public static void main(String[] args) {
		while(true) {
			Scanner sc = new Scanner(System.in);
			
			System.out.println("\nChoose the option\n1.Enter File Name\n2.Business Operation\n3.Search File\n4.Exit");
			int a = sc.nextInt();
			if(a==1) {
				continue;
			}
			else if(a==2) {
				System.out.println("1.Add File\n 2. Delete File \n 3. Search File \n 4. Go back");
				int b = sc.nextInt();
				switch(b) {
					case 1:
						break;
					case 2:
						break;
					case 3:
						break;
					case 4: 
						continue;
				}
				continue;
			}
			else if(a==3) {
				continue;
			}
			else if(a==4) {
				break;
			}
			sc.close();
		}
	}
}
